# Base de datos PostgreSQL
DATABASE_URL=postgres://postgres:password@localhost:5432/whatsapp_api?sslmode=disable

# Redis (opcional, para cache y pubsub)
REDIS_URL=redis://localhost:6379

# JWT Secret para autenticación
JWT_SECRET=tu-jwt-secret-muy-seguro-cambialo-en-produccion

# Puerto del servidor
PORT=8080

# Entorno (development, production)
ENVIRONMENT=development

# Nivel de logs (debug, info, warn, error)
LOG_LEVEL=info

# Configuración de webhooks
WEBHOOK_TIMEOUT=30
WEBHOOK_RETRY_ATTEMPTS=3
